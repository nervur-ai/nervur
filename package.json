{
  "name": "nervur-brain",
  "version": "0.4.0",
  "description": "Nervur Brain â€” Express server with Matrix identity",
  "type": "module",
  "private": true,
  "scripts": {
    "predev": "lsof -ti:3000,5173 | xargs kill -9 2>/dev/null; true",
    "dev": "concurrently -n brain,admin -c blue,green \"node --watch brain/index.js\" \"npm run dev --prefix admin\"",
    "dev:brain": "node --watch brain/index.js",
    "start": "node brain/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint brain/ homeserver/ && npm run lint --prefix admin",
    "lint:fix": "eslint --fix brain/ homeserver/ && npm run lint:fix --prefix admin",
    "format": "prettier --write 'brain/**/*.js' 'homeserver/**/*.js' 'admin/src/**/*.{js,jsx}'",
    "format:check": "prettier --check 'brain/**/*.js' 'homeserver/**/*.js' 'admin/src/**/*.{js,jsx}'"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "express": "^4.21.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "globals": "^16.0.0",
    "prettier": "^3.0.0",
    "supertest": "^7.0.0",
    "vitest": "^3.0.0"
  }
}
